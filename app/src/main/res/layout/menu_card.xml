<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="226dp"
    android:layout_height="293dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"

    cardview:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_card_bg"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/editbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="169dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_editbutton" />

        <ImageView
            android:id="@+id/menuImg"
            android:layout_width="match_parent"
            android:layout_height="168dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="202dp"
            android:layout_height="68dp"
            android:layout_above="@+id/textView3"
            android:layout_below="@+id/menuImg"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="2dp"

            android:fontFamily="@font/sfprotext_regular"
            android:text="TextView"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"

            android:fontFamily="@font/sfprotext_bold"
            android:gravity="end"
            android:text="TextView"
            android:textColor="#333333"
            android:textSize="28sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>